<div class="container mb-3 border text-center" id = "banner">
<h1> <%= @restaurant.name %></h1>
</div>

<div class="container w-50 text-center">
  <h5> Add your review</h5>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <div class="mt-3"><%= f.submit %></div>
  <% end %>
</div>


